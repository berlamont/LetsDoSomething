<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
			 x:Class="LetsDoSomething.CalendarFeatures"
			 xmlns:local="clr-namespace:LetsDoSomething" Title="Calendar"
             xmlns:calendar="clr-namespace:Syncfusion.Maui.Calendar;assembly=Syncfusion.Maui.Calendar">
    <calendar:SfCalendar x:Name="calendar" SelectionMode="Multiple">
        <calendar:SfCalendar.MonthView>
            <calendar:CalendarMonthView FirstDayOfWeek="Monday"/>
        </calendar:SfCalendar.MonthView>
    </calendar:SfCalendar>
</ContentPage>
